{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "buildCommand": "npm install --legacy-peer-deps && CI=false npm run build"
    },
    "deploy": {
        "startCommand": "npx serve -s build -l 3000",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}